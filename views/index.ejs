<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

</head>

<body>
  <div class="container">
    <h1 class="text-center">Products List</h1>
    <% if (User) {%>
      <strong>Xin Chao</strong>: <%= User.local.name %><br>
      <a href="/logout" class="btn
      btn-primary"><span class="fa fa-user"></span> Logout</a>

    <% }else{ %>
    
      <a href="/login" class="btn btn-primary"><span class="fa fa-user"></span> Login</a>
      <a href="/register" class="btn btn-primary"><span class="fa fa-user"></span> Register</a>
    <% } %>
    <hr />
    <form action="/" method="get" class="form-inline">
      <input type="text" name="name" class="form-control" placeholder="Search">
      <input type="number" name="begin_price" class="form-control" placeholder="Begin Price">
      <input type="number" name="end_price" class="form-control" placeholder="End Price">
      <button type='submit' class="btn btn-warning">search</button>

      <div class="container">
        <div class="row">
          <% for(var i=0; i<results.length; i++) { %>
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"><strong><%= results[i].name  %></strong></h4>
                  <h5>
                    <%= results[i].price %> VND</h5>
                  <p class="card-text">
                    <%= results[i].description %>
                  </p>
                  <h6> <img src="../upload/<%=results[i].image %>" alt=""> </h6>
                  <a href='/add/<%= results[i].id %>' class="btn btn-success">Add To Card</a>
                  <br />
                </div>
              </div>
            </div>
            <% } %>
        </div>
        <% if (pages > 0) { %>
          <ul class="pagination text-center">
              <% if (current == 1) { %>
                  <li class="disabled"><a>First</a></li>
              <% } else { %>
                  <li><a href="/1">First</a></li>
              <% } %>
              <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
              <% if (i !== 1) { %>
                  <li class="disabled"><a>...</a></li>
              <% } %>
              <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                  <% if (i == current) { %>
                      <li class="active"><a><%= i %></a></li>
                  <% } else { %>
                      <li><a href="/<%= i %>"><%= i %></a></li>
                  <% } %>
                  <% if (i == Number(current) + 4 && i < pages) { %>
                      <li class="disabled"><a>...</a></li>
                  <% } %>
              <% } %>
              <% if (current == pages) { %>
                  <li class="disabled"><a>Last</a></li>
              <% } else { %>
                  <li><a href="/<%= pages %>">Last</a></li>
              <% } %>
          </ul>
      <% } %>

        </div>
    </form>

    
    <br />



    <div style="position: fixed; top: 100px; right: 100px;">
      <a href="/cart" class="btn btn-warning"><i class="fa fa-shopping-cart"></i></a>
    </div>  
    <div style="position: fixed; top:
          150px; right: 100px">
      <a href="/new_product" class="btn
            btn-primary"><i class="fa fa-plus"></i></a>
    </div>

  </div>



  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>


</body>

</html>